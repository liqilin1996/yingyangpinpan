page {
  background: url('https://zn1121.com/images/helpbg.png') no-repeat;
  background-size: 100% 100%;
}

.main {
  display: flex;
  /* justify-content: center; */
  flex-direction: column;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-content {
  position: fixed;
  top: 30%;
  left: 0;
  z-index: 9500;
  width: 500rpx;
  height: 55%;
  overflow: hidden;
  padding: 50rpx 50rpx 50rpx;
  background: #eff;
  margin: -180rpx 70rpx;
  border-radius: 20rpx;
}

.teacher_name_modal {
  font-family: "楷体";
  text-align: center;
  font-size: 150%;
}

.modal_img {
  border-radius: 250rpx;
  width: 250rpx;
  height: 250rpx;
  margin: 0 auto;
  margin-top: 5%;
  overflow: hidden;
  display: flex;
  justify-content: center;
}

.contact_modal {
  width: 25%;
