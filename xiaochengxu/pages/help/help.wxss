}

.block_title_modal {
  position: relative;
  font-size: 32rpx;
  line-height: 1.2;
  padding: 10rpx;
  text-indent: 30rpx;
}

.block_title_modal::after {
  position: absolute;
  left: 10rpx;
  top: 8rpx;
  content: '';
  width: 9rpx;
  height: 46rpx;
  background: rgb(68, 228, 233);
}

